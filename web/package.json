{
  "name": "buildo-toctoc",
  "version": "0.0.2",
  "description": "A library that handles authentication with toctoc in a React webapp using buildo stack",
  "main": "lib",
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watch",
    "build": "rm -rf lib && mkdir lib && tsc && npx babel src --out-dir lib",
    "lint": "scriptoni lint src test",
    "lint-fix": "scriptoni lint --fix src test",
    "preversion": "npm run lint && npm run test",
    "prepublish": "npm run build",
    "release-version": "smooth-release",
    "metarpheus": "scriptoni metarpheus-ts && scriptoni metarpheus",
    "metarpheus-diff": "scriptoni metarpheus-ts-diff && scriptoni metarpheus-diff"
  },
  "files": [
    "lib",
    "typings"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:buildo/toctoc.git"
  },
  "keywords": [
    "authentication",
    "authorization",
    "auth",
    "toctoc"
  ],
  "author": "Vincenzo Guerrisi <vincenzo@buildo.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buildo/toctoc/issues"
  },
  "homepage": "https://github.com/buildo/toctoc#readme",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  },
  "dependencies": {
    "axios": "^0.17.1",
    "cookies-js": "^1.2.3"
  },
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "jest": "^21.2.1",
    "jest-localstorage-mock": "^2.0.1",
    "scriptoni": "^0.10.0",
    "smooth-release": "^8.0.4",
    "ts-jest": "^21.1.2",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.5.3"
  }
}
